<div class="container-fluid min-vh-100">
  <div class="container-profile">
    <div class="card" style="width: 24rem;">
      <div class="card-body">
        <img class="avatar-xtralarge" alt="avatar-large" src="https://kitt.lewagon.com/placeholder/users/ondine-dbn" />
        <h5 class="card-title"><%= @offer.title%> </h5>
        <h6 class="card-subtitle mb-2 text-muted">Entrepreneur Expert</h6>
        <p class="card-text"><%= @offer.description %></p>
        <div class="container">
          <ul class="p-0" style="list-style:none">
            <li>
              <span><%= @offer.skill %></span>
            </li>
          </ul>

<%= link_to 'Book this dev', new_offer_booking_path(@offer) %>
        </div>
      </div>
    </div>
  </div>

  <div class="container-reviews d-flex flex-column align-items-center">
    <% @offer.reviews.each do |review| %>
     <div><%= review.content %></div>
     <div><%= review.rating %></div>
    <% end %>
  </div>
</div> %>
