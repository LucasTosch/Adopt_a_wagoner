<div class="container-fluid min-vh-100">
  <div class="container-profile">
    <div class="card" style="width: 24rem;">
      <div class="card-body">
        <img class="avatar-xtralarge" alt="avatar-large" src="https://kitt.lewagon.com/placeholder/users/ondine-dbn" />
        <h5 class="card-title"><%= @user.first_name%> </h5>
        <%# <i class="fas fa-star"></i>
        <i class="fas fa-star-half-alt"></i> %>
        <h6 class="card-subtitle mb-2 text-muted">Entrepreneur Expert</h6>
        <p class="card-text"><%= @user.description %></p>
        <%= link_to 'Edit my profile', edit_user_path(@user), class: "btn"  %>
      </div>
    </div>
  </div>
</div>
